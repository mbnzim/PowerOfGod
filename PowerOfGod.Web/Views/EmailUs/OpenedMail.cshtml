@foreach (var item in Model)
{
    if (item.read == false)
    {
        <div class="col-md-10">
            <h3>
                <strong>
                    <span><img src="~/Content1/" width="30" height="25" /></span>
                    @Html.ActionLink(item.subject, "InboxDetails", "EmailUs", new { id = item.contactId }, new { @class = "link" })
                </strong>
            </h3>
        </div>
        <fieldset>
            <div class="col-md-10">
                <p>
                    @Html.DisplayFor(i => item.body)
                    <div class="tabs">
                        <span>Date Sent: @Html.DisplayFor(i => item.datesent)</span>
                    </div>
                </p>
            </div>
        </fieldset>
    }
    else
    {
        <div class="col-md-10">
            <h3>
                <strong>
                    <span><img src="~/Content/openenvelope.png" width="30" height="25" /></span>
                    @Html.ActionLink(item.subject, "InboxDetails", "EmailUs", new { id = item.contactId }, new { @class = "link" })
                </strong>
            </h3>
        </div>
        <fieldset>
            <div class="col-md-10">
                <p>
                    @Html.DisplayFor(i => item.body)
                    <div class="tabs">
                        <span>Date Sent: @Html.DisplayFor(i => item.datesent)</span>
                    </div>
                </p>
            </div>
        </fieldset>
    }
}
<br />
<div style="text-align: center">
    <p>
        @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </p>
    <p style="margin-top: -25px">
        @Html.PagedListPager(Model, page => Url.Action("AllMessages", new { page }))
    </p>
</div>


